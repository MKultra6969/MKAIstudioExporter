{
  "manifest_version": 3,
  "name": "Google AI Studio Chat Exporter",
  "version": "0.0.7",
  "description": "Экспорт чатов из AI Studio | by mkultra69",
  "homepage_url": "https://mk69.su",
  "permissions": [
    "activeTab",
    "downloads",
    "scripting",
    "storage",
    "offscreen"
  ],
  "host_permissions": [
    "https://aistudio.google.com/*"
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/16px.png",
      "32": "icons/32px.png",
      "128": "icons/128px.png"
    }
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://aistudio.google.com/*"],
      "js": ["src/content.ts"]
    }
  ],
  "icons": {
    "16": "icons/16px.png",
    "32": "icons/32px.png",
    "128": "icons/128px.png"
  },
  "web_accessible_resources": [{
    "resources": ["src/offscreen.html"],
    "matches": ["<all_urls>"]
  }]
}
